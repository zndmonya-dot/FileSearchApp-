<Window x:Class="FullTextSearch.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:FullTextSearch.App.ViewModels"
        xmlns:controls="clr-namespace:FullTextSearch.App.Controls"
        mc:Ignorable="d"
        Title="ファイル検索"
        Height="900" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#fafafa"
        Loaded="Window_Loaded"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <Window.Resources>
        <!-- スムーズなスクロール -->
        <Style TargetType="ScrollViewer">
            <Setter Property="CanContentScroll" Value="False"/>
        </Style>
        
        <!-- TreeView スタイル -->
        <Style x:Key="TreeItemStyle" TargetType="TreeViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <StackPanel>
                            <Border x:Name="Bd" 
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}"
                                    CornerRadius="4"
                                    Margin="2,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton x:Name="Expander"
                                                  IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Width="20" Height="20"
                                                  Visibility="{Binding HasItems, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border Background="Transparent">
                                                                <Path x:Name="Arrow" 
                                                                      Data="M 0 0 L 4 4 L 0 8 Z"
                                                                      Fill="#999"
                                                                      HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      RenderTransformOrigin="0.5,0.5">
                                                                    <Path.RenderTransform>
                                                                        <RotateTransform Angle="0"/>
                                                                    </Path.RenderTransform>
                                                                </Path>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="Arrow" Property="RenderTransform">
                                                                        <Setter.Value>
                                                                            <RotateTransform Angle="90"/>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                    <ContentPresenter Grid.Column="1" 
                                                      ContentSource="Header"
                                                      HorizontalAlignment="Stretch"/>
                                </Grid>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Margin="16,0,0,0"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#e3f2fd"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#f5f5f5"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="#bbdefb"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Border Grid.Row="0" Background="White" BorderBrush="#e0e0e0" BorderThickness="0,0,0,1">
            <Grid Margin="20,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 検索バー -->
                <Border Background="#f5f5f5" CornerRadius="8" Padding="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="Magnify" 
                                                 Width="24" Height="24"
                                                 Foreground="#666"
                                                 VerticalAlignment="Center"
                                                 Margin="12,0"/>

                        <TextBox Grid.Column="1"
                                 x:Name="SearchBox"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="16"
                                 VerticalAlignment="Center"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="8,12"
                                 CaretBrush="#1976d2"
                                 KeyDown="SearchBox_KeyDown"/>

                        <Button Grid.Column="2"
                                Content="検索"
                                Command="{Binding SearchCommand}"
                                Background="#1976d2"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Padding="24,10"
                                Margin="8,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#1565c0"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#0d47a1"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="3"
                                Click="SettingsButton_Click"
                                ToolTip="設定"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="8"
                                Cursor="Hand">
                            <materialDesign:PackIcon Kind="CogOutline" Width="24" Height="24" Foreground="#666"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- メインコンテンツ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" MinWidth="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- 左：ファイルツリー -->
            <Border Grid.Column="0" Background="White" BorderBrush="#e0e0e0" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ヘッダー -->
                    <Border Grid.Row="0" Background="#fafafa" Padding="16,12" BorderBrush="#e0e0e0" BorderThickness="0,0,0,1">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FolderOutline" Width="20" Height="20" Foreground="#1976d2" VerticalAlignment="Center"/>
                                <TextBlock Text="ファイル" FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" Foreground="#999">
                                <Run Text="{Binding FileTreeItemCount, FallbackValue=0}"/>
                                <Run Text=" 項目"/>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- ツリー -->
                    <TreeView Grid.Row="1"
                              x:Name="FileTreeView"
                              ItemsSource="{Binding FileTree}"
                              Background="Transparent"
                              BorderThickness="0"
                              Padding="8"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              ItemContainerStyle="{StaticResource TreeItemStyle}"
                              SelectedItemChanged="FileTreeView_SelectedItemChanged">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding IconSource}" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"
                                           Visibility="{Binding IsFile, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <materialDesign:PackIcon Kind="{Binding FolderIcon}" Width="18" Height="18" Foreground="#f9a825" VerticalAlignment="Center" Margin="0,0,8,0"
                                                             Visibility="{Binding IsFolder, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="13"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>

                    <!-- ローディング -->
                    <Border Grid.Row="1" Background="#80FFFFFF" Visibility="{Binding IsLoadingTree, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Style="{StaticResource MaterialDesignCircularProgressBar}" Width="32" Height="32"/>
                            <TextBlock Text="読み込み中..." Foreground="#666" Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- スプリッター -->
            <GridSplitter Grid.Column="1" Width="5" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Stretch" Cursor="SizeWE"/>

            <!-- 右：プレビュー -->
            <Border Grid.Column="2" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ヘッダー -->
                    <Border Grid.Row="0" Background="#fafafa" Padding="16,12" BorderBrush="#e0e0e0" BorderThickness="0,0,0,1">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileDocumentOutline" Width="20" Height="20" Foreground="#1976d2" VerticalAlignment="Center"/>
                                <TextBlock Text="プレビュー" FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="{Binding SelectedFile.Name, FallbackValue=ファイルを選択してください}" 
                                       HorizontalAlignment="Right" 
                                       VerticalAlignment="Center" 
                                       FontSize="12" 
                                       Foreground="#666"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="400"/>
                        </Grid>
                    </Border>

                    <!-- プレビュー本体 -->
                    <controls:PreviewHost Grid.Row="1"
                                          x:Name="PreviewHostControl"
                                          FilePath="{Binding SelectedFile.FullPath}"/>

                    <!-- ファイル情報バー -->
                    <Border Grid.Row="2" Background="#fafafa" Padding="16,10" BorderBrush="#e0e0e0" BorderThickness="0,1,0,0"
                            Visibility="{Binding SelectedFile, Converter={StaticResource NullToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="12" Foreground="#666">
                                <Run Text="サイズ: "/><Run Text="{Binding SelectedFile.SizeText}" FontWeight="SemiBold"/>
                            </TextBlock>
                            <TextBlock FontSize="12" Foreground="#666" Margin="24,0,0,0">
                                <Run Text="更新: "/><Run Text="{Binding SelectedFile.ModifiedText}" FontWeight="SemiBold"/>
                            </TextBlock>
                            <Button Content="ファイルを開く" 
                                    Command="{Binding OpenSelectedFileCommand}"
                                    Margin="24,0,0,0"
                                    Padding="16,4"
                                    FontSize="12"
                                    Background="#1976d2"
                                    Foreground="White"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="フォルダを開く" 
                                    Command="{Binding OpenSelectedFolderCommand}"
                                    Margin="8,0,0,0"
                                    Padding="16,4"
                                    FontSize="12"
                                    Background="#f5f5f5"
                                    Foreground="#333"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}" BorderBrush="#ddd" BorderThickness="1">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- ステータスバー -->
        <Border Grid.Row="2" Background="White" BorderBrush="#e0e0e0" BorderThickness="0,1,0,0" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="#666" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ProgressBar Value="{Binding IndexProgress}" 
                                 Minimum="0" Maximum="100" 
                                 Width="150" Height="4"
                                 Foreground="#1976d2"
                                 Visibility="{Binding IsIndexing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Margin="0,0,16,0"/>
                    
                    <Border Background="#e3f2fd" CornerRadius="4" Padding="12,6">
                        <TextBlock FontSize="12" Foreground="#1976d2">
                            <Run Text="{Binding IndexedDocumentCount, StringFormat=N0}" FontWeight="SemiBold"/>
                            <Run Text=" ファイル"/>
                        </TextBlock>
                    </Border>
                    
                    <Button Command="{Binding RebuildIndexCommand}"
                            ToolTip="インデックスを更新"
                            Margin="8,0,0,0"
                            Padding="8"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20" Foreground="#666"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
