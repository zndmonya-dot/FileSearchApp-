@namespace FileSearch.Blazor.Components.Shared
@using Microsoft.AspNetCore.Components.Web
@if (Visible)
{
    <div class="modal-backdrop" @onclick="OnCancel">
        <div class="file-nav-confirm-dialog" @onclick:stopPropagation="true">
            <p class="file-nav-confirm-msg">@(IsNext ? "次のファイルに移動しますか？" : "前のファイルに移動しますか？")</p>
            <div class="file-nav-confirm-actions">
                <button class="action-btn primary" @onclick="OnConfirm">移動する</button>
                <button class="action-btn" @onclick="OnCancel">キャンセル</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public bool IsNext { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
}
